<h2>Edit <%= resource_name.to_s.humanize %></h2>

    <br/><br/> 
     <% if @city && @area %>     
      <div id="selected_city">
      	<a href="#location_modal" id="a_city_name" role="button" data-toggle="modal">
      		<% if @city %> 
      		  <%= @city.name %>
      		<% else %> 
      		   Choose city
      		<% end %> 
        </a>
      </div>
      <div id="selected_area">
        <a href="#location_modal" id="a_area_name" role="button" data-toggle="modal">
        	<% if @area %> 
      		  <%= @area.name %>
      		<% else %> 
      		   Choose area
      		<% end %>        	
        </a>
      </div>
      <% else %>
        <a href="#location_modal" id="a_choose_area_city" role="button" data-toggle="modal">Choose Area or City</a>
        <a href="#location_modal" id="a_city_name" role="button" data-toggle="modal"></a>
        <a href="#location_modal" id="a_area_name" role="button" data-toggle="modal"></a>
      <% end %>
        

    
    <!-- Modal -->
    <div id="location_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">My place</h3>
      </div>
      <div class="modal-body">
      	<ul class="nav nav-tabs">
      	  <li class="active" ><a href="#city" data-toggle="tab">Города</a></li>
      	  <li><a href="#area" data-toggle="tab">Районы</a></li>
      	</ul>
      	<div class="tab-content">
      		<div class="tab-pane active" id="city">
      		  <ul>
        	   <%= render :partial => 'city', :collection => cities, :as => :item %>      			
      		</div>
      		<div class="tab-pane" id="area">
      		  <ul>
        	   <%= render :partial => 'area', :collection => areas, :as => :item %>      			
      		</div>
      	</div>
      </div>
    </div>    
    <br/><br/>


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  
  
    <ul class="nav nav-tabs">
      <li class="active" ><a href="#home" data-toggle="tab">Личные даныне</a></li>
      <li><a href="#profile" data-toggle="tab">Изменить пароль</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="home">
      	<div><%= f.label :name %><br />
        <%= f.text_field :name %></div>
        <div><%= f.label :phone_number %><br />
        	<div>десять цифр без 8 и +7</div>
        <%= f.text_field :phone_number, :maxlength => 10 %></div>       

        
      	<div><%= f.label :email %><br />
        <%= f.email_field :email %></div></div>
      <div class="tab-pane" id="profile">
       <div><%= f.label :password %><br />
        <%= f.password_field :password, :autocomplete => "off" %></div>
    
        <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %></div> 
      </div>
    </div>
 
 <br /><br />


  <div><%= f.submit "Update" %></div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
